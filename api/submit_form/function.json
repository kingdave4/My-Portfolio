{
  "bindings": [
    {
      "authLevel": "anonymous",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "route": "submit_form",
      "methods": ["post"]
    },
    {
      "type": "Mailgun",
      "direction": "out",
      "name": "mailgun_msg",
      "apiKey": "MAILGUN_API_KEY",
      "from": "contact@mail.davidmboli-idie.com"
    },
    {
      "type": "blob",
      "direction": "out",
      "name": "output_blob",
      "path": "submissions/{rand-guid}.json",
      "connection": "AzureWebJobsStorage"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "$return"
    }
  ]
}
